---
import { Image } from 'astro:assets';
import FormattedDate from './FormattedDate.astro';
import { getContentUrl } from '../utils/url-utils';

const { post } = Astro.props;
const type = post.data.type || 'post';
const isFullPost = type === 'post';
const postUrl = getContentUrl(post);
---

{isFullPost ? (
	<!-- Full blog post - card layout -->
	<li class="entry-post">
		<a href={postUrl}>
			{post.data.heroImage && (
				<Image width={720} height={360} src={post.data.heroImage} alt="" />
			)}
			<h4 class="title">{post.data.title}</h4>
			<p class="date">
				<FormattedDate date={post.data.pubDate} />
				{post.data.time && <span class="time"> / {post.data.time}</span>}
			</p>
		</a>
	</li>
) : type === 'link' ? (
	<!-- Link entry - compact format -->
	<li class="entry-link">
		<div class="link-header">
			<a href={postUrl} class="link-title">
				{post.data.title}
			</a>
		</div>
		{post.data.description && <p class="link-description">{post.data.description}</p>}
		<p class="meta">
			<FormattedDate date={post.data.pubDate} />
			{post.data.time && <span class="time"> / {post.data.time}</span>}
			{post.data.link_source && <span class="source"> ({post.data.link_source})</span>}
			{post.data.tags && post.data.tags.length > 0 && (
				<span class="tags">
					{post.data.tags.map((tag) => (
						<span class="tag">{tag}</span>
					))}
				</span>
			)}
		</p>
	</li>
) : type === 'note' ? (
	<!-- Note entry - simple text block -->
	<li class="entry-note">
		<a href={postUrl} class="note-content">
			<p class="note-title">{post.data.title}</p>
			{post.data.description && <p class="note-description">{post.data.description}</p>}
		</a>
		<p class="meta">
			<FormattedDate date={post.data.pubDate} />
			{post.data.time && <span class="time"> / {post.data.time}</span>}
			<a href={postUrl} class="permalink" aria-label="Permalink">#</a>
		</p>
	</li>
) : (
	<!-- Quote entry -->
	<li class="entry-quote">
		<a href={postUrl}>
			<blockquote class="quote-content">
				{post.data.title}
			</blockquote>
			{post.data.description && <p class="quote-attribution">— {post.data.description}</p>}
		</a>
		<p class="meta">
			<FormattedDate date={post.data.pubDate} />
			{post.data.time && <span class="time"> / {post.data.time}</span>}
			<a href={postUrl} class="permalink" aria-label="Permalink">#</a>
		</p>
	</li>
)}

<style>
	/* Full post entries */
	.entry-post {
		position: relative;
		margin-bottom: 1.5rem;
		background: var(--card-bg);
		border: 3px solid var(--border);
		border-radius: 0px;
		box-shadow: var(--box-shadow-light);
		transition: var(--transition);
		overflow: hidden;
		z-index: 1;
	}

	body.dark-mode .entry-post {
		box-shadow: var(--box-shadow-dark);
	}

	.entry-post:hover {
		transform: translate(-2px, -2px) rotate(-0.5deg);
		box-shadow: 10px 10px 0px 0px var(--border);
		z-index: 5;
	}

	.entry-post img {
		width: 100%;
		height: 200px;
		object-fit: cover;
		margin: 0;
		border-radius: 0px;
		box-shadow: none;
		transition: transform 0.2s ease;
		border-bottom: 3px solid var(--border);
		border: none;
	}

	.entry-post a {
		display: block;
		text-decoration: none;
		transition: var(--transition);
		color: var(--text-primary);
		padding: 1.5rem;
	}

	.entry-post a:hover .title {
		color: var(--accent-1);
		text-decoration: underline;
		text-decoration-thickness: 3px;
	}

	.entry-post a:hover .date {
		color: var(--accent-2);
		opacity: 1;
	}

	.entry-post a:hover img {
		transform: scale(1.02);
	}

	/* Link entries - compact, full width */
	.entry-link {
		position: relative;
		padding: 1.5rem;
		margin-bottom: 1.5rem;
		background: var(--card-bg);
		border: 3px solid var(--border);
		border-radius: 0px;
		box-shadow: var(--box-shadow-light);
		transition: var(--transition);
		overflow: hidden;
		z-index: 1;
	}

	body.dark-mode .entry-link {
		box-shadow: var(--box-shadow-dark);
	}

	.entry-link:hover {
		transform: translate(-2px, -2px) rotate(0.5deg);
		box-shadow: 10px 10px 0px 0px var(--border);
		z-index: 5;
	}

	.link-header {
		display: flex;
		align-items: baseline;
		justify-content: space-between;
		gap: 0.5rem;
		margin-bottom: 0.6rem;
	}

	.link-title {
		color: var(--text-primary);
		text-decoration: none;
		font-size: 1.1rem;
		font-weight: 900;
		font-family: var(--font-heading);
		text-transform: uppercase;
		letter-spacing: 0.5px;
		transition: var(--transition);
	}

	.link-title:hover {
		color: var(--accent-1);
		text-decoration: underline;
		text-decoration-thickness: 3px;
	}

	.permalink {
		color: var(--text-light);
		text-decoration: none;
		font-size: 0.9rem;
		opacity: 0.5;
		transition: var(--transition);
	}

	body.dark-mode .permalink {
		color: var(--text-dark);
	}

	.permalink:hover {
		opacity: 1;
		color: var(--accent);
		transform: scale(1.05) translate(2px, -2px);
	}

	.link-description {
		margin: 0.6rem 0;
		color: var(--text-light);
		line-height: 1.6;
		opacity: 0.9;
	}

	body.dark-mode .link-description {
		color: var(--text-dark);
	}

	/* Note entries - simple, full width */
	.entry-note {
		position: relative;
		padding: 1.5rem;
		margin-bottom: 1.5rem;
		background: var(--card-bg);
		border: 3px solid var(--border);
		border-radius: 0px;
		box-shadow: var(--box-shadow-light);
		transition: var(--transition);
		overflow: hidden;
		z-index: 1;
	}

	body.dark-mode .entry-note {
		box-shadow: var(--box-shadow-dark);
	}

	.entry-note:hover {
		transform: translate(-2px, -2px) rotate(-0.5deg);
		box-shadow: 10px 10px 0px 0px var(--border);
		z-index: 5;
	}

	.note-content {
		display: block;
		text-decoration: none;
		color: var(--text-primary);
		margin-bottom: 0.6rem;
		transition: var(--transition);
	}

	.note-content:hover {
		color: var(--accent-1);
	}

	.note-title {
		margin: 0 0 0.5rem 0;
		font-size: 1.05rem;
		font-weight: 900;
		font-family: var(--font-heading);
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.note-description {
		margin: 0.3rem 0 0;
		color: var(--text-light);
		line-height: 1.6;
		opacity: 0.9;
	}

	body.dark-mode .note-description {
		color: var(--text-dark);
	}

	/* Quote entries */
	.entry-quote {
		position: relative;
		padding: 1.5rem;
		margin-bottom: 1.5rem;
		background: var(--card-bg);
		border: 3px solid var(--border);
		border-radius: 0px;
		box-shadow: var(--box-shadow-light);
		transition: var(--transition);
		overflow: hidden;
		z-index: 1;
		transform: rotate(-0.5deg);
	}

	body.dark-mode .entry-quote {
		box-shadow: var(--box-shadow-dark);
	}

	.entry-quote:hover {
		transform: translate(-2px, -2px) rotate(0.5deg);
		box-shadow: 10px 10px 0px 0px var(--border);
		z-index: 5;
	}

	.entry-quote a {
		display: block;
		text-decoration: none;
		color: var(--text-primary);
		margin-bottom: 0.6rem;
		transition: var(--transition);
	}

	.entry-quote a:hover {
		color: var(--accent-1);
	}

	.quote-content {
		margin: 0 0 0.6rem 0;
		padding-left: 1.5rem;
		border-left: 6px solid var(--accent-1);
		font-style: normal;
		font-weight: bold;
		color: var(--border);
		line-height: 1.6;
		font-size: 1.1rem;
		background: var(--primary);
		padding: 1rem 1.5rem 1rem 2rem;
		border-radius: 0;
		position: relative;
	}

	.quote-content::before {
		content: "▰▱▰";
		position: absolute;
		top: -12px;
		left: 10px;
		font-size: 1.2rem;
		color: var(--accent-2);
	}

	.quote-attribution {
		margin: 0.5rem 0 0 1.5rem;
		font-size: 0.9rem;
		color: var(--text-light);
		opacity: 0.8;
	}

	body.dark-mode .quote-attribution {
		color: var(--text-dark);
	}

	/* Shared styles */
	.title {
		margin: 0 0 0.5rem;
		color: var(--text-primary);
		line-height: 1.2;
		font-size: clamp(1.2rem, 2.5vw, 1.5rem);
		font-family: var(--font-heading);
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.date,
	.meta {
		margin: 0;
		color: var(--text-secondary);
		font-size: 0.9rem;
		opacity: 0.9;
		font-family: var(--font-body);
	}

	.time,
	.source {
		color: var(--text-secondary);
		opacity: 0.9;
	}

	.tags {
		margin-left: 0.5rem;
	}

	.tag {
		display: inline-block;
		margin-left: 0.5rem;
		padding: 0.3rem 0.7rem;
		background: var(--primary);
		border-radius: 0px;
		font-size: 0.75rem;
		color: var(--border);
		transition: var(--transition);
		border: 2px solid var(--border);
		font-family: var(--font-heading);
		text-transform: uppercase;
		letter-spacing: 0.5px;
		font-weight: 700;
	}

	.tag:hover {
		background: var(--accent-2);
		color: var(--border);
		transform: translate(-2px, -2px);
		box-shadow: 4px 4px 0px 0px var(--border);
	}

	@media (max-width: 900px) {
		.entry-post img {
			height: 180px;
		}
	}

	@media (max-width: 500px) {
		.entry-post {
			text-align: center;
		}

		.entry-post img {
			height: 160px;
		}

		.entry-link,
		.entry-note,
		.entry-quote {
			padding: 1rem;
		}
	}
</style>
