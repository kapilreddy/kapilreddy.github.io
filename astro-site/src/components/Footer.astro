	}

	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
	}

	p {
		margin: 0;
		color: var(--text-light);
		font-size: 0.9em;
	}

	body.dark-mode p {
		color: var(--text-dark);
	}

	a {
		color: var(--accent);
		text-decoration: none;
		transition: var(--transition);
	}

	body.dark-mode a {
		color: var(--accent-dark);
	}

	a:hover {
		text-decoration: underline;
	}
