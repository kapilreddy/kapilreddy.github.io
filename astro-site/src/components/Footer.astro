---
const today = new Date();
---

<footer>
	<div class="footer-content">
		<div class="footer-inner">
			<p class="ascii-divider">▰▱▰ ▰▱▰ ▰▱▰</p>
			<p class="copyright">© {today.getFullYear()} <strong>KAPIL REDDY</strong></p>
			<p class="license">
				All content licensed 
				<a href="https://creativecommons.org/licenses/by-sa/4.0/" target="_blank" rel="noopener noreferrer">CC BY-SA 4.0</a>
			</p>
		</div>
	</div>
</footer>
<style>
	footer {
		margin: 4rem 0 0 0;
		padding: 0;
		background: var(--border);
		border-top: 6px solid var(--border);
		box-shadow: 0px -8px 0px 0px var(--border);
		transition: var(--transition);
		position: relative;
	}

	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		padding: 3rem 2rem;
	}

	.footer-inner {
		text-align: center;
		padding: 2rem;
		background: var(--border);
		border: 4px solid var(--primary);
		box-shadow: 8px 8px 0px 0px var(--primary);
		position: relative;
	}

	.ascii-divider {
		font-size: 1.5rem;
		color: var(--primary);
		margin-bottom: 1.5rem;
		letter-spacing: 0.5rem;
		font-weight: 900;
	}

	p {
		margin: 0.8rem 0;
		color: var(--bg);
		font-size: 0.95rem;
		line-height: 1.8;
		font-family: var(--font-heading);
	}

	.copyright {
		font-weight: 900;
		text-transform: uppercase;
		letter-spacing: 1px;
		margin-bottom: 1rem;
		font-size: 1.1rem;
	}

	.copyright strong {
		color: var(--bg);
		font-weight: 900;
	}

	.license {
		font-size: 0.85rem;
		font-family: var(--font-body);
		font-weight: 600;
	}

	.motto {
		margin-top: 1.5rem;
		font-size: 0.85rem;
		opacity: 0.9;
		letter-spacing: 2px;
		font-weight: 900;
	}

	a {
		color: var(--bg);
		text-decoration: none;
		transition: var(--transition);
		font-weight: 900;
		padding: 0.3em 0.6em;
		background: var(--primary);
		border: 3px solid var(--primary);
		text-transform: uppercase;
		letter-spacing: 0.5px;
		font-size: 0.85em;
		display: inline-block;
		font-family: var(--font-heading);
	}

	a:hover {
		background: var(--accent-2);
		border-color: var(--accent-2);
		color: var(--border);
		transform: translate(-2px, -2px);
		box-shadow: 4px 4px 0px 0px var(--primary);
	}

	a:active {
		transform: translate(1px, 1px);
		box-shadow: 2px 2px 0px 0px var(--primary);
	}

	@media (max-width: 768px) {
		footer {
			margin: 2rem 0 0 0;
		}

		.footer-content {
			padding: 2rem 1rem;
		}

		.footer-inner {
			padding: 1.5rem;
		}

		.ascii-divider {
			font-size: 1.2rem;
			letter-spacing: 0.3rem;
		}

		p {
			font-size: 0.85rem;
		}

		.license {
			font-size: 0.8rem;
		}

		.motto {
			font-size: 0.75rem;
		}
	}
</style>
