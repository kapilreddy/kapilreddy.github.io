---
const today = new Date();
---

<footer>
	<div class="footer-content">
		<p class="copyright">Â© {today.getFullYear()} KAPIL REDDY</p>
		<p class="license">
			Licensed under <a href="https://creativecommons.org/licenses/by-sa/4.0/" target="_blank" rel="noopener noreferrer">CC BY-SA 4.0</a>, except where noted otherwise.
		</p>
	</div>
</footer>
<style>
	footer {
		margin: 1.5rem 0 0 0;
		padding: 0;
		background: var(--border);
		border-top: 4px solid var(--border);
		transition: var(--transition);
		position: relative;
	}

	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		padding: 1rem 2rem;
		text-align: center;
	}

	p {
		margin: 0.2rem 0;
		color: var(--bg);
		font-size: 0.85rem;
		line-height: 1.5;
		font-family: var(--font-body);
	}

	.copyright {
		font-weight: 600;
		font-size: 0.85rem;
	}

	.license {
		font-size: 0.8rem;
		font-family: var(--font-body);
		font-weight: 400;
		opacity: 0.9;
	}

	a {
		color: var(--bg);
		text-decoration: underline;
		transition: var(--transition);
		font-weight: 700;
		text-decoration-thickness: 2px;
		text-underline-offset: 2px;
		font-family: var(--font-body);
	}

	a:hover {
		color: var(--primary);
		text-decoration-thickness: 3px;
	}

	@media (max-width: 768px) {
		footer {
			margin: 1rem 0 0 0;
		}

		.footer-content {
			padding: 0.75rem 1rem;
		}

		p {
			font-size: 0.75rem;
			margin: 0.15rem 0;
		}

		.copyright {
			font-size: 0.75rem;
		}

		.license {
			font-size: 0.7rem;
		}
	}
</style>
