---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2>
			<a href="/">
				<img src="/images/logo_dark.png" alt="Logo" class="logo logo-light" />
				<img src="/images/logo.png" alt="Logo" class="logo logo-dark" />
				<span class="site-title">{SITE_TITLE}</span>
			</a>
		</h2>
		<div class="nav-right">
			<div class="internal-links">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/blog">Blog</HeaderLink>
				<HeaderLink href="/about">About</HeaderLink>
			</div>
			<button class="theme-toggle" aria-label="Toggle dark mode">
				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
				</svg>
			</button>
		</div>
	</nav>
</header>

<script>
	// Theme switcher - runs on every page
	document.addEventListener('DOMContentLoaded', () => {
		const body = document.body;
		const toggle = document.querySelector('.theme-toggle');
		
		// Check for saved user preference or system preference
		const savedTheme = localStorage.getItem('darkMode');
		if (savedTheme === 'enabled') {
			body.classList.add('dark-mode');
		} else if (savedTheme === 'disabled') {
			body.classList.remove('dark-mode');
		} else if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
			body.classList.add('dark-mode');
		}
		
		// Toggle theme on click
		if (toggle) {
			toggle.addEventListener('click', () => {
				body.classList.toggle('dark-mode');
				// Save user preference
				if (body.classList.contains('dark-mode')) {
					localStorage.setItem('darkMode', 'enabled');
				} else {
					localStorage.setItem('darkMode', 'disabled');
				}
			});
		}
	});
</script>
<style>
	header {
		margin: 0;
		padding: 0;
		background: var(--primary);
		border-bottom: 6px solid var(--border);
		box-shadow: 0px 8px 0px 0px var(--border);
		transition: var(--transition);
		position: relative;
	}

	/* Mobile: Position header at bottom for thumb-friendly navigation */
	@media (max-width: 768px) {
		header {
			position: fixed;
			bottom: 0;
			left: 0;
			right: 0;
			top: auto;
			z-index: 1000;
			border-bottom: none;
			border-top: 6px solid var(--border);
			box-shadow: 0px -8px 0px 0px var(--border);
		}
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
		padding: 1rem 2rem;
	}

	h2 {
		margin: 0;
		font-size: clamp(1.2rem, 2vw, 1.5rem);
		font-weight: 900;
		text-transform: uppercase;
		letter-spacing: 1px;
		font-family: var(--font-heading);
	}

	h2 a {
		text-decoration: none;
		color: var(--border);
		transition: var(--transition);
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	h2 a:hover {
		transform: skew(-2deg);
	}

	.logo {
		height: 40px;
		width: auto;
		transition: var(--transition);
		border: none;
	}

	.logo-light {
		display: block;
	}

	.logo-dark {
		display: none;
	}

	body.dark-mode .logo-light {
		display: none;
	}

	body.dark-mode .logo-dark {
		display: block;
	}

	.site-title {
		margin-left: 0.8rem;
		display: none;
	}

	.nav-right {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.internal-links {
		display: flex;
		gap: 0;
	}

	.theme-toggle {
		background: var(--border);
		color: var(--primary);
		border: 3px solid var(--border);
		padding: 0.6rem;
		cursor: pointer;
		transition: var(--transition);
		display: flex;
		align-items: center;
		justify-content: center;
		box-shadow: 3px 3px 0px 0px var(--border);
	}

	.theme-toggle:hover {
		background: var(--accent-2);
		color: var(--border);
		transform: translate(-2px, -2px);
		box-shadow: 5px 5px 0px 0px var(--border);
	}

	.theme-toggle:active {
		transform: translate(1px, 1px);
		box-shadow: 2px 2px 0px 0px var(--border);
	}

	.theme-toggle svg {
		display: block;
	}

	.internal-links :global(a) {
		padding: 0.8rem 1.5rem;
		color: var(--border);
		background: transparent;
		text-decoration: none;
		font-weight: 700;
		font-family: var(--font-heading);
		text-transform: uppercase;
		letter-spacing: 0.5px;
		font-size: 0.9rem;
		transition: var(--transition);
		border: 3px solid transparent;
		position: relative;
	}

	.internal-links :global(a:hover) {
		background: var(--border);
		color: var(--primary);
		transform: skew(-5deg);
		border: 3px solid var(--border);
	}

	.internal-links :global(a.active) {
		background: var(--accent-2);
		color: var(--border);
		border: 3px solid var(--border);
		box-shadow: 4px 4px 0px 0px var(--border);
	}

	@media (max-width: 768px) {
		nav {
			padding: 0.8rem 1rem;
		}

		h2 {
			font-size: 1rem;
		}

		h2 a {
			gap: 0.3rem;
		}

		.ascii-decoration {
			font-size: 1.2rem;
		}

		.internal-links {
			flex: 1;
			justify-content: center;
		}

		.internal-links :global(a) {
			padding: 0.6rem 1rem;
			font-size: 0.85rem;
		}
	}

	@media (max-width: 500px) {
		nav {
			flex-wrap: nowrap;
			padding: 0.6rem 0.5rem;
		}

		.logo {
			height: 28px;
		}

		.site-title {
			display: none; /* Hide site title on very small screens for space */
		}

		.nav-right {
			flex: 1;
			justify-content: space-between;
			gap: 0.5rem;
		}

		.internal-links {
			gap: 0;
			flex: 1;
			justify-content: center;
		}

		.internal-links :global(a) {
			padding: 0.5rem 0.6rem;
			font-size: 0.7rem;
			letter-spacing: 0;
		}

		.theme-toggle {
			padding: 0.4rem;
		}

		.theme-toggle svg {
			width: 18px;
			height: 18px;
		}
	}
</style>
