---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import BlogEntry from '../../components/BlogEntry.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';

export async function getStaticPaths() {
	const posts = await getCollection('blog', ({ data }) => {
		const type = data.type || 'post';
		return !data.draft && type === 'post';
	});

	// Group posts by year
	const postsByYear = new Map<string, typeof posts>();
	posts.forEach(post => {
		const date = new Date(post.data.pubDate);
		const year = date.getFullYear().toString();
		if (!postsByYear.has(year)) {
			postsByYear.set(year, []);
		}
		postsByYear.get(year)!.push(post);
	});

	return Array.from(postsByYear.entries()).map(([year, yearPosts]) => ({
		params: { year },
		props: { 
			posts: yearPosts.sort((a, b) => 
				new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
			),
			year 
		}
	}));
}

const { posts, year } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`${SITE_TITLE} - Posts from ${year}`} description={`Blog posts from ${year}`} />
	</head>
	<body>
		<Header />
		<main>
			<section>
				<h1>Posts from {year}</h1>
				<p class="archive-info">{posts.length} post{posts.length !== 1 ? 's' : ''}</p>
				<ul>
					{posts.map((post) => <BlogEntry post={post} />)}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	h1 {
		margin: 2rem 0 1rem;
	}
	
	.archive-info {
		color: var(--text-secondary);
		margin-bottom: 2rem;
	}
	
	ul {
		list-style-type: none;
		padding: 0;
	}
</style>
