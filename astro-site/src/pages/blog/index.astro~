---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import BlogEntry from '../../components/BlogEntry.astro';
import BlogFilter from '../../components/BlogFilter.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const currentType = 'all';

// Get all posts
const posts = (await getCollection('blog', ({ data }) => {
	// Hide drafts in both development and production
	return !data.draft;
})).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.blog-header {
				text-align: center;
				margin-bottom: 2rem;
				position: relative;
				z-index: 2;
			}
			.blog-header h1 {
				font-size: clamp(2rem, 5vw, 3.2rem);
				margin-bottom: 0.5rem;
				color: var(--text-light);
				letter-spacing: 1px;
				text-transform: uppercase;
			}
			body.dark-mode .blog-header h1 {
				color: var(--text-dark);
			}
			.blog-header p {
				font-size: clamp(1rem, 2vw, 1.2rem);
				color: var(--text-light);
				opacity: 0.8;
				margin-bottom: 1.5rem;
				font-weight: 600;
			}
			body.dark-mode .blog-header p {
				color: var(--text-dark);
			}
		ul {
			display: grid;
			grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
			gap: 1.5rem;
			list-style-type: none;
			margin: 0;
			padding: 0;
		}
			@media (max-width: 900px) {
				ul {
					grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
					gap: 1.5rem;
				}
				ul li:first-child {
					flex-direction: column;
					text-align: center;
				}
				ul li:first-child img {
					width: 100%;
					height: 250px;
					border-right: none;
					border-bottom: 3px solid var(--border-light);
				}
				body.dark-mode ul li:first-child img {
					border-bottom: 3px solid var(--border-dark);
				}
				ul li:first-child .blog-entry-content {
					width: 100%;
					padding: 1.5rem;
				}
			}
			@media (max-width: 500px) {
				ul {
					grid-template-columns: 1fr;
					gap: 1.2rem;
				}

				.blog-header h1 {
					font-size: 2rem;
				}
				.blog-header p {
					font-size: 1rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<div class="blog-header">
					<p>Experiences, fleeting notes, big idess, and linkblog on programming, AI, and wherever curiosity leads</p>
				</div>
				<BlogFilter currentType={currentType} />
				<ul>
					{posts.map((post) => <BlogEntry post={post} />)}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
