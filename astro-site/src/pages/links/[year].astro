---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import BlogEntry from '../../components/BlogEntry.astro';
import { SITE_TITLE } from '../../consts';

export async function getStaticPaths() {
	const links = await getCollection('blog', ({ data }) => {
		return !data.draft && data.type === 'link';
	});

	// Group links by year
	const linksByYear = new Map<string, typeof links>();
	links.forEach(link => {
		const date = new Date(link.data.pubDate);
		const year = date.getFullYear().toString();
		if (!linksByYear.has(year)) {
			linksByYear.set(year, []);
		}
		linksByYear.get(year)!.push(link);
	});

	return Array.from(linksByYear.entries()).map(([year, yearLinks]) => ({
		params: { year },
		props: { 
			posts: yearLinks.sort((a, b) => 
				new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
			),
			year 
		}
	}));
}

const { posts, year } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`${SITE_TITLE} - Links from ${year}`} description={`Link posts from ${year}`} />
	</head>
	<body>
		<Header />
		<main>
			<section>
				<h1>Links from {year}</h1>
				<p class="archive-info">{posts.length} link{posts.length !== 1 ? 's' : ''}</p>
				<ul>
					{posts.map((post) => <BlogEntry post={post} />)}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	h1 {
		margin: 2rem 0 1rem;
	}
	
	.archive-info {
		color: var(--text-secondary);
		margin-bottom: 2rem;
	}
	
	ul {
		list-style-type: none;
		padding: 0;
	}
</style>
