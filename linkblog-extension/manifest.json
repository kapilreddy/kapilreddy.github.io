{
  "manifest_version": 3,
  "name": "Linkblog Capture",
  "version": "1.0.0",
  "description": "Capture links and save them as markdown files for your linkblog",
  "permissions": [
    "activeTab",
    "downloads",
    "storage"
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
